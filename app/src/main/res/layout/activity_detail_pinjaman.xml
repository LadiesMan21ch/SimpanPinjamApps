<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPinjaman">

    <RelativeLayout
        android:id="@+id/relativeDetailPinjaman"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_abuabu_putih_kotak">

        <TextView
            android:id="@+id/tv_jumlahAngsuranJml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Rp. 3.064.500"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_light" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_jumlahAngsuranJml"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Jumlah Angsuran"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_light" />

        <TextView
            android:id="@+id/tv_horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/textView33"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="Jumlah Angsuran"
            android:textColor="@android:color/transparent"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_angsuranPokokJml"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:text="Rp. 3.000.000"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_light" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_angsuranPokokJml"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:text="Angsuran Pokok"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_light" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tv_horizontal"
            android:layout_toRightOf="@+id/tv_angsuranPokokJml"
            android:background="@android:color/darker_gray"
            android:text="TextView"
            android:textColor="@android:color/transparent" />

        <TextView
            android:id="@+id/tv_angsuranBungaJml"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/textView35"
            android:text="Rp. 60.000"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_light" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_angsuranBungaJml"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/textView35"
            android:text="Angsuran Bunga"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_light" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tv_horizontal"
            android:layout_toRightOf="@+id/tv_angsuranBungaJml"
            android:background="@android:color/darker_gray"
            android:text="TextView"
            android:textColor="@android:color/transparent" />

        <TextView
            android:id="@+id/tv_biayaAdministrasiJml"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/textView36"
            android:text="Rp. 4.500"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_light" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_biayaAdministrasiJml"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/textView36"
            android:text="Biaya Administrasi"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_light" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_above="@+id/textView35"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/black"
            android:gravity="center"
            android:text="JUMLAH"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_light" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_detailPinjaman"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeDetailPinjaman"
        android:layout_below="@id/tb_detail_pinjaman"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_detail_pinjaman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light">

        <Button
            android:id="@+id/btn_keluarDetailPinjaman"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_action_close_blue" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="30dp"
            android:text="Detail Pinjaman"
            android:textColor="@color/backgroundKu"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_light" />

    </android.support.v7.widget.Toolbar>
</RelativeLayout>